@page
@model Relay.Pages.IndexModel 
@{
    ViewData["Title"] = "Status";
}

<div class="container">
    @if (Request.Method == "POST" && Request.Query["handler"].Equals("reload"))
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-sync"></i>
                    Requested Guide Refresh
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Status</h5>
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Provider</th>
                            <td><a href="@Model.LineupUri">@Model.Config.Provider</a></td>
                        </tr>
                        <tr>
                            <th>Refresh Interval</th>
                            <td>@TimeSpan.FromSeconds(Model.Config.UpdateIntervalSeconds)</td>
                        </tr>
                        <tr>
                            <th>Tuner Count</th>
                            <td>@Model.Config.TunerCount</td>
                        </tr>
                        <tr>
                        </tr>
                        </tbody>
                    </table>
                    <form class="form-inline" method="post" asp-page-handler="reload">
                        <button class="btn btn-outline-dark">Refresh Guide</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Channel Lineup</h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        @Model.ChannelCount channels (HD: @Model.HdCount, Favourites: @Model.FavouritesCount)
                    </h6>
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col"></th>
                            <th scope="col" class="col-8">Name</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var channel in Model.Channels)
                        {
                            <tr>
                                <th scope="row">@channel.Number</th>
                                <td>
                                    @if (channel.Favorite == 1)
                                    {
                                        <i class="fas fa-heart"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-heart"></i>
                                    }
                                </td>
                                <td>
                                    @channel.Name
                                    @if (channel.HD == 1)
                                    {
                                        <span class="badge badge-pill badge-dark">HD</span>
                                    }
                                    @if (channel.IsNew)
                                    {
                                        <span class="badge badge-pill badge-light">New</span>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>


